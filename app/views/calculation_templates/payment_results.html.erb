<h1>Payment Results</h1>

<dl>

  <dt>APR</dt>
  <dd><%= number_to_percentage(@APR, precision: 4)%></dd>
  
  <dt>Number of years</dt>
  <dd><%= @years.round(0)%></dd>

  <dt>Principal</dt>
  <dd><%= number_to_currency(@principal)%></dd>
  
  <dt>Payment</dt>
  <dd><%= number_to_currency((@payment).round(2))%></dd>

</dl>

